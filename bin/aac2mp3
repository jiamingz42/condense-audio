#!/bin/zsh

INPUT_AAC="$1"
OUTPUT_MP3="${f:r}.mp3"

function addPrefix() {
  pattern="$(echo $INPUT_AAC | sed -E "s/.*(S[0-9]+E[0-9]+).*/\1/")"
  sed "s/^/[${pattern}] /"
}

# Audio Bitrate: https://support.video.ibm.com/hc/en-us/articles/207852117-Internet-connection-and-recommended-encoding-settings
ffmpeg -loglevel info -y -i "${INPUT_AAC}" -b:a 128k "${OUTPUT_MP3}}.mp3" 2>&1 | addPrefix
